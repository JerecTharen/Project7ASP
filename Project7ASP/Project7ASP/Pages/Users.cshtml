@page
@model Project7ASP.Pages.UsersModel
@{
    ViewData["Title"] = "Users";
}

<h2>Database Users</h2>
<table>
    <thead>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Age</th>
    <th>Email</th>
    </thead>
    <tbody>
        @foreach (var dbUser in Model.Users)
        {
            <tr>
                <td>@dbUser.user_name</td>
                <td>@dbUser.first_name</td>
                <td>@dbUser.last_name</td>
                <td>@dbUser.age</td>
                <td>@dbUser.email</td>
                <td><a asp-page="/UserEdit" asp-route-uid="@dbUser.Id"><i class="fas fa-user-edit"></i></a></td>
                <td><a asp-page="/DeleteUser" asp-route-id="@dbUser.Id"><i class="fas fa-trash"></i></a></td>
            </tr>}
    </tbody>
</table>

